<resources>

    <declare-styleable name="OverlayCropView">

        <!--Overlay view-->
        <attr name="show_oval_crop_frame" format="boolean"/>
        <attr name="circle_dimmed_layer" format="boolean"/>
        <attr name="dimmed_color" format="color"/>

        <attr name="grid_stroke_size" format="dimension"/>
        <attr name="grid_color" format="color"/>
        <attr name="grid_row_count" format="integer"/>
        <attr name="grid_column_count" format="integer"/>
        <attr name="show_grid" format="boolean"/>

        <attr name="frame_stroke_size" format="dimension"/>
        <attr name="frame_color" format="color"/>
        <attr name="show_frame" format="boolean"/>

    </declare-styleable>

    <declare-styleable name="TimeLineTrimmer">

        <attr name="tlt_dimmed_color" format="color"/>
        <attr name="tlt_line_stroke_color" format="color"/>
        <attr name="tlt_line_stroke_size" format="dimension"/>
        <attr name="tlt_left_guide_line_thumb" format="reference"/>
        <attr name="tlt_right_guide_line_thumb" format="reference"/>
        <attr name="tlt_timeline_rect_direction" format="enum">
            <enum name="all" value="0"/>
            <enum name="vertical" value="1"/>
            <enum name="horizontal" value="2"/>
        </attr>

    </declare-styleable>

    <declare-styleable name="TimeLineTrimmerVersion01">

        <attr name="tlt_ver01_dimmed_color" format="color"/>
        <attr name="tlt_ver01_line_stroke_color" format="color"/>
        <attr name="tlt_ver01_line_stroke_size" format="dimension"/>
        <attr name="tlt_ver01_left_guide_line_thumb" format="reference"/>
        <attr name="tlt_ver01_right_guide_line_thumb" format="reference"/>
        <attr name="tlt_ver01_timeline_rect_direction" format="enum">
            <enum name="all" value="0"/>
            <enum name="vertical" value="1"/>
            <enum name="horizontal" value="2"/>
        </attr>

    </declare-styleable>

</resources>